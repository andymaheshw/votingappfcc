extends layout

block content
  .page-header
    h3 Make a Poll
  form.form-horizontal(method='POST', action="/makepoll")
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='title') Title
      .col-sm-7
        input.form-control(name='title', id='title', placeholder='title')
    .form-group
      label.col-sm-3.control-label(for='title') Option 1
      .col-sm-7
        input.form-control(name='Option_1', id='Option_1', placeholder='Option 1')
      button.col-sm-3.add_option(type='button')
    .form-group
      .col-sm-offset-3.col-sm-7
        button.col-sm-3.btn.btn-primary(type='submit')
          i.fa.fa-user
          | Submit

block scripts
  script(src='/js/makepoll.js')